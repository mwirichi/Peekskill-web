[03:48, 08/12/2025] Peekskill International Ltd: import { prisma } from '@/lib/db';
import { ProductCard } from '@/components/ProductCard';

export default async function ProductsPage() {
  const products = await prisma.product.findMany({
    orderBy: { createdAt: 'desc' },
  });

  return (
    <div className="container mx-auto py-12">
      <h1 className="text-4xl font-bold mb-10">All Products</h1>
      <div className="grid grid-cols-1 md:grid-cols-3 lg:grid-cols-4 gap-8">
        {products.map((product) => (
          <ProductCard key={product.id} product={product} />
        ))}
      </div>
    </div>
  );
}
[03:49, 08/12/2025] Peekskill International Ltd: 'use client';

import Image from 'next/image';
import { Button } from '@/components/ui/button';
import { useShoppingCart } from 'use-shopping-cart';

export function ProductCard({ product }: { product: any }) {
  const { addItem } = useShoppingCart();

  const item = {
    name: product.name,
    id: product.id,
    price: product.price * 100, // stripe wants cents
    currency: product.currency,
    image: product.imageUrl,
  };

  return (
    <div className="group relative rounded-lg border bg-card p-4 transition-all hover:shadow-lg">
      <Image
        src={product.imageUrl || '/placeholder.svg'}
        alt={product.name}
        width={400}
        height={400}
        className="aspect-square object-cover rounded-md"
      />
      <div className="mt-4">
        <h3 className="font-semibold text-lg">{product.name}</h3>
        <p className="text-sm text-muted-foreground">{product.description}</p>
        <div className="mt-4 flex items-center justify-between">
          <span className="text-2xl font-bold">
            {product.price} {product.currency}
          </span>
          <Button onClick={() => addItem(item)}>Add to Cart</Button>
        </div>
      </div>
    </div>
  );
}
